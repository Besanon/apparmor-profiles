abi <abi/4.0>,

include <tunables/global>

@{exec_pathDRS} = @{bin}/rsync
@{exec_pathDRS} += @{bin}/grsync
profile grsync @{exec_pathDRS} {
  include <abstractions/base>
  include <abstractions/app/bwrap-glycin>
  include <abstractions/consoles>
  include <abstractions/graphics>
  include <abstractions/gtk>
  include <abstractions/fonts>
  include <abstractions/fontconfig-cache-read>
  include <abstractions/nameservice-strict>
  include <abstractions/python>
  include <abstractions/user-read>
  include <abstractions/bus-session>
  include <abstractions/bus-system>
  include <abstractions/bus/system/net.hadess.PowerProfiles>
  include <abstractions/bus/session/org.freedesktop.portal.Desktop>
  include <abstractions/bus/session/org.gtk.Private.RemoteVolumeMonitor>
  include <abstractions/bus/session/org.gtk.vfs.Daemon>
  include <abstractions/dconf-write>
  include <abstractions/bus-accessibility>
 
  capability dac_override,
  capability dac_read_search,

  network inet dgram,
  network inet6 dgram,
  network netlink raw,

  signal receive set=term peer=lxqt-session,

  @{exec_pathDRS} mr,

  @{bin}/bwrap                          Px -> grsync//&glycin,
  @{lib}/glycin-loaders/@{d}+/glycin-*  Px -> grsync//&glycin//&glycin//loaders,

  @{bin}/ r,
  @{bin}/python3.@{int} r,

  @{bin}/{,@{multiarch}-}ld.bfd rix,
  @{bin}/cat                    rix,
  @{bin}/ldconfig               rix,
  @{bin}/uname                  rix,
  @{bin}/rsync                  rix,

  @{bin}/ccache                 rCx -> ccache,
  @{bin}/fusermount{,3}         rCx -> fusermount,
  @{bin}/pass                   rPx,
  @{bin}/ssh                    rPx,

  # Dirs that can be backed up
  /            r,

  /etc/{,**}   r,

  /usr/share/X11/xkb/{,**}	 r,
  /usr/share/grsync/grsync.glade r,
  /usr/share/icons/ 		 r,
  /usr/share/applications/	 r,
  /usr/share/applications/*	 r,
  /usr/share/icons/{,**}	 r,
  /usr/share/mime/{,**}		 r,
  /usr/share/fonts/{,**}	 r,
  /usr/share/pixmaps/		 r,
  /usr/share/glib-2.0/schemas/gschemas.compiled r,
  /usr/share/sounds/freedesktop/index.theme 	r,
  /usr/share/sounds/freedesktop/stereo/dialog-warning.oga   r,
  /usr/local/share/locale/de_DE/LC_MESSAGES/grsync.mo r,
  /usr/share/X11/xkb/keycodes/* r,
  /usr/share/xkeyboard-config-2/{,**} r,

  /home/{,**}  r,
  owner @{HOME}/default.grsync rw,
  @{MOUNTS}/{,**} r,
  /root/{,**}  r,
  /srv/{,**}   r,
  /var/{,**}   r,

  # The backup dirs
  owner @{MOUNTS}/ r,
  owner @{MOUNTS}/** rwkl -> @{MOUNTS}/**,

  owner @{user_cache_dirs}/ rw,
  owner @{user_cache_dirs}/grsync/ rw,
  owner @{user_cache_dirs}/grsync/** rw,

  owner @{user_config_dirs}/grsync/ rw,
  owner @{user_config_dirs}/grsync/** rw,
  owner @{user_config_dirs}/pulse/cookie rwk,

  owner @{user_share_dirs}/recently-used.xbel 		rw,
  owner @{user_share_dirs}/recently-used.xbel.@{rand6}  rw, 
  owner @{user_share_dirs}/sddm/wayland-session.log w,

  # If /tmp/ isn't accessible, then /var/tmp/ is used.
  owner @{tmp}/* rw,
  owner @{tmp}/grsync-cache-*/ rw,
  owner @{tmp}/grsync-cache-*/* rw,
  owner @{tmp}/tmp*/ rw,
  owner @{tmp}/tmp*/file rw,
  owner @{tmp}/tmp*/idx rw,
  owner /var/lib/libuuid/clock.txt w,
  owner /var/tmp/* rw,
  owner /var/tmp/tmp*/ rw,
  owner /var/tmp/tmp*/file rw,
  owner /var/tmp/tmp*/idx rw,

  owner @{user_cache_dirs}/event-sound-cache.tdb.@{hex32}.@{multiarch} rwk,
  owner @{user_share_dirs}/sddm/xorg-session.log w,

  owner @{PROC}/@{pid}/fd/ 		r,
  owner @{PROC}/@{pid}/stat 		r,
  owner @{PROC}/@{pid}/mountinfo 	r,
  owner @{PROC}/@{pid}/cgroup 		r,

  @{run}/mount/utab 			r,
  owner @{run}/user/@{uid}/pulse/ 	rw,
  owner @{run}/user/@{uid}/dconf/user 	rw,

  @{sys}/fs/cgroup/@{int}/cpu.max r,
  @{sys}/devices/@{pci}/usb1/1-2/1-2:*/host3/target3:0:0/3:0:0:0/block/sdb/uevent r,

  /dev/fuse rw,
  /dev/shm/ r,

  @{sys}/fs/cgroup/user.slice/user-@{uid}.slice/cpu.max r,
  @{sys}/fs/cgroup/user.slice/user-@{uid}.slice/session-@{int}.scope/cpu.max r,
  @{sys}/fs/cgroup/user.slice/cpu.max r,
  @{sys}/fs/cgroup/user.slice/cpu.max r,

  profile ccache {
    include <abstractions/base>

    @{bin}/ccache mr,

    @{lib}/llvm-[0-9]*/bin/clang      rix,
    @{bin}/{,@{multiarch}-}gcc-[0-9]* rix,
    @{bin}/{,@{multiarch}-}g++-[0-9]* rix,

    /etc/debian_version r,

    @{MOUNTS}/** rw,

    include if exists <local/grsync_ccache>
  }

  profile fusermount {
    include <abstractions/base>
    include <abstractions/consoles>
    include <abstractions/nameservice-strict>

    capability sys_admin,

    mount fstype=fuse options=(ro nosuid nodev) grsyncfs -> @{MOUNTS}/,
    mount fstype=fuse options=(ro nosuid nodev) grsyncfs -> @{MOUNTS}/*/,

    umount @{MOUNTS}/,
    umount @{MOUNTS}/*/,

    @{bin}/fusermount{,3} mr,

    /etc/fuse.conf r,

    @{PROC}/@{pids}/mounts r,

    /dev/fuse rw,

    include if exists <local/grsync_fusermount>
  }

  include if exists <usr/grsync.d>
  include if exists <local/grsync>
}

# vim:syntax=apparmor
