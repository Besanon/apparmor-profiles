abi <abi/4.0>,

include <tunables/global>

@{exec_pathKD} = @{bin}/kdestroy
profile kdestroy @{exec_pathKD} {
  include <abstractions/base>

  @{exec_pathKD} mr,

  #Allow root to destroy other users' creds cache
  capability dac_override,

  #Config Files
  /etc/krb5.conf r,
  /etc/krb5.conf.d/{,**} r,

  #Credentials cache
  /tmp/krb5cc_* rwk,
  /tmp/tkt* rwk,

  include if exists <local/kdestroy>
}

# vim:syntax=apparmor
