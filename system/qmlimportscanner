abi <abi/4.0>,

include <tunables/global>

@{exec_pathqml24} = /usr/lib/qt6/bin/qmlimportscanner
profile qmlimportscanner @{exec_pathqml24} {
  include <abstractions/base>
  include <abstractions/qt6>

  @{exec_pathqml24} mr,

  deny capability sys_admin,
  deny capability sys_chroot,
  deny capability net_admin,

  include if exists <local/qmlimportscanner>

}

# vim:syntax=apparmor
