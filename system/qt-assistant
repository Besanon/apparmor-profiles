abi <abi/4.0>,

include <tunables/global>

@{exec_pathqass} = @{bin}/qdbus @{lib}/qt6/bin/assistant
profile qassistant @{exec_pathqass} {
  include <abstractions/base>
  include <abstractions/bus-session>

  @{exec_pathqass} mr,

  owner @{user_share_dirs}/sddm/wayland-session.log w,

  include if exists <local/qass>
}

# vim:syntax=apparmor
